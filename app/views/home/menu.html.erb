<script language="javascript" type="text/javascript">
	setTimeout("location.reload();",30000);
</script>

<div style="height:10px;"></div>
<div style="width: 100%;align=center"><b>New Pics</b></div>
<% if @new_pics.empty? %>
	<div>No New Pictures!</div>
<% else %>
	<div style="width: 100%;">
		<% for pic in @new_pics do %>
			<div style="float:left; width: 200px;">
			  <img height="200" src='<%= pic.images.standard_resolution.url %>'></img><br/><%= pic.caption.text %>
			</div>
		<% end %>
	</div>
<% end %>

<br/><br/>

<div style="height:200px;"></div>
<div style="width: 100%;align=center"><b>Old Pics</b></div>
<% if @old_pics.empty? %>
	<div>No Old Pictures!</div>
<% else %>
	<div style="width: 100%;">
		<% for pic in @old_pics do %>
			<div style="float:left; width: 200px;">
			  <img height="200" src='<%= pic.images.standard_resolution.url %>'></img><br/><%= pic.caption.text %>
			</div>
		<% end %>
	</div>
<% end %>
